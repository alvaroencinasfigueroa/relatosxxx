@model Relatosxxx.Models.Relato

@{
    ViewData["Title"] = "Crear Nuevo Relato";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white border-warning shadow-lg">
                <div class="card-header bg-transparent border-warning text-center">
                    <h2 class="text-warning">✨ Escribir Nueva Historia ✨</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">

                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label text-warning">Título</label>
                            <input asp-for="Titulo" class="form-control bg-secondary text-white border-0" placeholder="Ej: Pasión prohibida..." required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria" class="form-label text-warning">Categoría</label>
                            <select asp-for="Categoria" class="form-select bg-secondary text-white border-0">
                                <option value="romantico">Romántico</option>
                                <option value="pasion">Pasión</option>
                                <option value="misterio">Misterio</option>
                                <option value="fantastico">Fantástico</option>
                                <option value="prohibido">Prohibido</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImagenUrl" class="form-label text-warning">URL de Portada</label>
                            <input asp-for="ImagenUrl" class="form-control bg-secondary text-white border-0" placeholder="Pega aquí el link de la imagen..." />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contenido" class="form-label text-warning">Contenido</label>
                            <textarea asp-for="Contenido" class="form-control bg-secondary text-white border-0" rows="6" placeholder="Escribe la historia aquí..." required></textarea>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="EsPremium" id="premiumSwitch">
                            <label class="form-check-label text-white" for="premiumSwitch">🔥 Contenido Premium (VIP)</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning fw-bold">Publicar</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>